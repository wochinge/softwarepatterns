<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/product_number"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_horizontal_margin"
    	android:layout_marginRight="@dimen/small_horizontal_margin"
    	android:layout_marginTop="@dimen/activity_vertical_margin"
    	android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/list_font_size"/>
    <TextView 
        android:id="@+id/product_unit"
        android:layout_toRightOf="@id/product_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_horizontal_margin"
    	android:layout_marginRight="@dimen/small_horizontal_margin"
    	android:layout_marginTop="@dimen/activity_vertical_margin"
    	android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/list_font_size"/>
    <TextView 
        android:id="@+id/product_name"
        android:layout_toRightOf="@id/product_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_horizontal_margin"
    	android:layout_marginRight="@dimen/small_horizontal_margin"
    	android:layout_marginTop="@dimen/activity_vertical_margin"
    	android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/list_font_size"/>
</RelativeLayout>
